<div class="container">
  <h1>Eat-Da-Burger</h1>
</div>

<div class="container">
  <div class="item burger-tray top-box left-box">
    <h2>Burgers remaining</h2>
    <ul>
      {{#unless burgers}}
      <li><p>There are no burgers yet! Time to place an order...</p></li>
      {{/unless}}
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=1}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="item burger-tray">
    <h2>Echoes of burgers past</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=0}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="container">
  <h2>Order a Burger!</h2>
</div>

<div class="container">
  <form class="create-form">
    <div class="form-group">
      <textarea id="burger" name="burger_name" placeholder="Enter your order here" rows="1"></textarea>
    </div>
    <button type="submit">Place Order</button>
  </form>
</div>

<div class="container">
  <footer>
    <p>Eat-Da-Burger powered by <a href="https://github.com/maxlemieux/mvcheezburger">mvcheezburger</a></p>
  </footer>
</div>