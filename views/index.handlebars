<div class="container">
  <h1>MVCheezburger</h1>
</div>

<div class="container">
  <div class="item burger-tray">
    <h2>Cheezburgers remaining</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=1}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="item burger-tray">
    <h2>Echoes of cheezburgers past</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=0}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="container">
  <h2>Add a Burger</h2>
</div>

<div class="container">
  <form class="create-form">
    <div class="form-group">
      <label for="burger">Burger Name:</label>
      <input type="text" id="burger" name="burger_name">
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>
