<h1>MVCheezburger</h1>

<div class="container">
  <div class="item">
    <h2>Cheezburgers remaining</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=1}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="item">
    <h2>Echoes of cheezburgers past</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=0}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>
